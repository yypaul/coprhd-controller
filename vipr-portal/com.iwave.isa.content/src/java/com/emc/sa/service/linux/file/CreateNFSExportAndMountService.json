{
    baseKey: "CreateNFSExportAndMount.File.Linux",
    serviceId: "LinuxCreateMountNFSExport",
    destructive: true,
    fields: {
        virtualArray: {
            type: "assetType.vipr.fileVirtualArray",
            lockable: true
        },
        
        virtualPool: {
            type: "assetType.vipr.fileNfsVirtualPool",
            lockable: true
        },
        
        project: {
            type: "assetType.vipr.project",
            lockable: true
        },
        
        fileSystemName: {
            type: "text",
            validation: {
                regEx: "^[^\"\\\\/\\[\\]:|+;,?*=<>]+$",
                min: 2,
                max: 128
            }
        },
        
        comment: {
            type: "text",
            required: false,
            validation: {
                regEx: "[^\-\u0080-\u009f]*",
                max: 255
            },
            lockable: true
        },
        
        size: {
            type: "storageSize",
            validation: {
                min: 1
            }
        },
        
        mountList: {
            type: "table",
            items: {
                host: {
                    type: "assetType.vipr.linuxFileHost"
                },
                security: {
                    type: "assetType.vipr.fileNFSSecurity",
                    initialValue: "sys",
                    lockable: true
                },
                domain:{
          			type:"text",
          			required: false,
          			lockable: true
        		},
                rootUserMapping:{
          			type:"text",
          			initialValue:"root",
          			lockable: true
        		},
                permission: {
                    type: "assetType.vipr.fileNFSPermission",
                    initialValue: "rw",
                    lockable: true
                },
                mountPath: {
                    type: "text",
                    validation: {
                        regEx: "/[A-Za-z0-9/_\.\-]*"
                    }
                },
                fsType:{
      				type: "choice",
      				initialValue: "auto",
      				select: "one",
      				options: {
        				"auto": "auto",
        				"nfs": "nfs",
        				"nfs4": "nfs4"
      				},
      				lockable: true
    			}
            }
        },
        
        smartQuota: {
            type: "group",
            collapsed: "true",
            items: {
                advisoryLimit: {
                    type: "text",
                    required: false,
                    validation: {
                        min: 0,
                        max: 100
                    }
                },
                softLimit: {
                    type: "text",
                    required: false,
                    validation: {
                        min: 0,
                        max: 100
                    }
                },
                gracePeriod: {
                    type: "text",
                    required: false,
                    validation: {
                        min: 1
                    }
                }
            }
        }
    }
}